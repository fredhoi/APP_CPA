<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResumeBuilder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_primaryContainer</item>
        <item name="colorAccent">@color/md_theme_secondary</item>
        
        <!-- For Edge-to-Edge UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Control system icon colors -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>

